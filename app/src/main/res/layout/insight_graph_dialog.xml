<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">
    <androidx.cardview.widget.CardView
        app:cardCornerRadius="15dp"
        android:layout_marginTop="10dp"
        android:id="@+id/graph_card_view"
        android:layout_marginStart="10dp"
        android:layout_marginEnd="10dp"
        android:orientation="vertical"
        android:layout_marginBottom="10dp"
        android:padding="5dp"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:padding="3dp"
            android:layout_height="match_parent">

            <com.jjoe64.graphview.GraphView
                android:id="@+id/item_insights_graph"
                android:layout_width="match_parent"
                android:layout_height="fill_parent"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="100dp"
                app:layout_constraintStart_toEndOf="@id/graph_label"
                android:layout_marginStart="30dp"
                android:rotation="0"
                app:layout_constraintBottom_toTopOf="@id/unit_price_date_tap_tv"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/unit_price_date_tap_tv"
                style="@style/user_item_details_text_style"
                android:text=""
                android:gravity="center_horizontal"
                android:textColor="@color/black"
                android:layout_marginBottom="20dp"
                android:layout_marginEnd="8dp"
                android:layout_marginStart="8dp"
                android:layout_marginTop="5dp"
                app:layout_constraintEnd_toEndOf="@id/item_insights_graph"
                app:layout_constraintStart_toStartOf="@id/item_insights_graph"
                app:layout_constraintTop_toBottomOf="@id/item_insights_graph"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>
            <ListView
                android:id="@+id/stores_key_list_view"
                android:layout_marginEnd="8dp"
                android:layout_marginStart="8dp"
                android:layout_width="match_parent"
                android:layout_marginTop="5dp"
                android:layout_marginBottom="10dp"
                app:layout_constraintTop_toBottomOf="@id/unit_price_date_tap_tv"
                app:layout_constraintStart_toStartOf="@id/unit_price_date_tap_tv"
                tools:listitem="@layout/store_key_item"
                android:layout_height="60dp"/>

            <TextView
                android:id="@+id/graph_label"
                android:layout_width="450dp"
                android:layout_height="450dp"
                android:rotation="-90"
                android:rotationX="0"
                android:rotationY="0"
                android:layout_gravity="bottom|end"
                android:gravity="center_horizontal"
                android:text="Item price per Date Insights "
                android:textAlignment="inherit"
                app:layout_constraintBottom_toBottomOf="@id/item_insights_graph"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="@id/item_insights_graph" />
        </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.cardview.widget.CardView>
    <Button
        style="@style/user_item_details_text_style"
        android:layout_width="wrap_content"
        app:layout_constraintWidth_percent="50"
        android:layout_height="40dp"
        android:id="@+id/exit_button"
        android:layout_marginStart="40dp"
        android:layout_marginEnd="40dp"
        android:textStyle="normal"
        android:elevation="10dp"
        android:textAllCaps="false"
        android:backgroundTint="@color/darker_light_blue"
        android:textColor="@color/white"
        android:textSize="14sp"
        android:theme="@style/Button.White"
        android:text="@string/exit"
        app:layout_constraintBottom_toBottomOf="@id/graph_card_view"
        app:layout_constraintStart_toStartOf="@id/graph_card_view"
        app:layout_constraintEnd_toEndOf="@id/graph_card_view"
        app:layout_constraintTop_toBottomOf="@id/graph_card_view"/>


</androidx.constraintlayout.widget.ConstraintLayout>