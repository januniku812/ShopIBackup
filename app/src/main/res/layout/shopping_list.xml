<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <androidx.cardview.widget.CardView
        android:id="@+id/user_item_card_view"
        app:cardCornerRadius="10dp"
        app:cardElevation="5dp"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginBottom="10dp"
        android:layout_width="match_parent"
        style="@style/user_item_details_text_style"
        android:layout_height="40dp">
        <androidx.constraintlayout.widget.ConstraintLayout

            android:id="@+id/user_item_card_view_cl"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
<!--             edit text view for the names of the stores-->
            <EditText
                style="@style/user_item_details_text_style"
                android:id="@+id/store_list_name_edit_text"
                android:fontFamily="sans-serif-condensed-medium"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                android:layout_width="wrap_content"
                android:visibility="gone"
                android:text=""
                android:layout_height="wrap_content"/>
            <TextView
                style="@style/user_item_details_text_style"
                android:id="@+id/store_list_name"
                android:fontFamily="sans-serif-condensed-medium"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                android:layout_width="wrap_content"
                android:text="THANKSGIVING DINNER TO BUY"
                android:layout_height="wrap_content"/>

            <ImageView
                android:id="@+id/edit_name_sl_button"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintEnd_toStartOf="@id/delete_item_button"
                app:layout_constraintBottom_toBottomOf="parent"
                android:layout_width="wrap_content"
                android:src="@drawable/ic_baseline_edit_24"
                android:layout_height="wrap_content"/>

<!--            <ImageView-->
<!--                android:id="@+id/reorder_items_button"-->
<!--                app:layout_constraintTop_toTopOf="parent"-->
<!--                app:layout_constraintEnd_toStartOf="@id/delete_item_button"-->
<!--                app:layout_constraintBottom_toBottomOf="parent"-->
<!--                android:layout_width="wrap_content"-->
<!--                android:src="@drawable/reorder_foreground"-->
<!--                android:layout_height="wrap_content"/>-->

            <ImageView
                android:id="@+id/delete_item_button"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                android:layout_width="wrap_content"
                app:layout_constraintEnd_toEndOf="parent"
                android:src="@drawable/delete_foreground"
                android:layout_height="wrap_content"/>


        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.cardview.widget.CardView>

</LinearLayout>