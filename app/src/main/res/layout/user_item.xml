<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <androidx.cardview.widget.CardView
        android:id="@+id/user_item_card_view"
        app:cardCornerRadius="10dp"
        app:cardElevation="5dp"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginBottom="10dp"
        android:layout_width="match_parent"
        style="@style/user_item_details_text_style"
        android:layout_height="40dp">
        <androidx.constraintlayout.widget.ConstraintLayout

            android:id="@+id/user_item_card_view_cl"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <TextView
                style="@style/user_item_details_text_style"
                android:id="@+id/store_name"
                android:fontFamily="sans-serif-condensed-medium"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toStartOf="@id/store_date"
                android:layout_width="wrap_content"
                android:text="@string/placeholder_store_name"
                android:layout_height="wrap_content"/>
            <TextView
                style="@style/user_item_details_text_style"
                android:id="@+id/store_date"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toEndOf="@id/store_name"
                app:layout_constraintEnd_toStartOf="@id/item_name_cl"
                android:layout_width="wrap_content"
                android:text="@string/placeholder_date_user_item"
                android:layout_height="wrap_content"/>
            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/item_name_cl"
                android:layout_width="wrap_content"
                app:layout_constraintStart_toEndOf="@id/store_date"
                app:layout_constraintEnd_toStartOf="@id/quantity"
                android:layout_height="match_parent">
            <TextView
                style="@style/user_item_details_text_style"
                android:id="@+id/item_name"
                android:textColor="@color/light_blue_3"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                android:layout_width="wrap_content"
                app:layout_constraintEnd_toEndOf="parent"
                android:text="ORANGE JUICE"
                android:layout_height="wrap_content"/>
            </androidx.constraintlayout.widget.ConstraintLayout>
            <TextView
                style="@style/user_item_details_text_style"
                android:id="@+id/quantity"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toEndOf="@id/item_name_cl"
                app:layout_constraintEnd_toStartOf="@id/amount_paid"
                android:layout_width="wrap_content"
                android:text="2"
                android:layout_height="wrap_content"/>
            <TextView
                style="@style/user_item_details_text_style"
                android:id="@+id/amount_paid"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toStartOf="@id/unit_price"
                app:layout_constraintStart_toEndOf="@id/quantity"
                android:layout_width="wrap_content"
                android:text="6.30"
                android:layout_height="wrap_content"/>
            <TextView
                style="@style/user_item_details_text_style"
                android:id="@+id/unit_price"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toEndOf="@id/amount_paid"
                android:layout_width="wrap_content"
                android:text="3.15"
                app:layout_constraintEnd_toEndOf="parent"
                android:layout_height="wrap_content"/>

        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.cardview.widget.CardView>
</LinearLayout>