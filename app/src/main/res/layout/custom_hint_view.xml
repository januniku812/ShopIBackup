<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/layoutDialogContainerVID"
    android:layout_width="400dp"
    android:layout_height="wrap_content"
    android:elevation="5dp"
    android:layout_margin="20dp">

    <!-- Main content area -->
    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/moreVertActionsLayoutDialog"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/nuetral_dialog_background"
        android:elevation="2dp"
        app:layout_constraintTop_toTopOf="parent">

        <TextView
            android:id="@+id/tutorialTitle"
            style="@style/user_item_details_text_style"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="0dp"
            android:background="@drawable/dialog_background"
            android:padding="10dp"
            android:text="@string/tutorial_title"
            android:textColor="@color/white"
            android:textSize="17sp"
            android:textStyle="normal"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/tutorial_text"
            app:layout_constraintTop_toBottomOf="@id/tutorialTitle"
            android:layout_marginStart="45dp"
            app:layout_constraintBottom_toBottomOf="@id/moreVertActionsLayoutDialog"
            android:layout_marginEnd="45dp"
            android:layout_marginTop="20dp"
            android:layout_marginBottom="80dp"
            app:layout_constraintStart_toStartOf="parent"
            android:textSize="18sp"
            style="@style/user_item_details_text_style"
            android:text="@string/chose_a_store"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>

    </androidx.constraintlayout.widget.ConstraintLayout>

    <!-- Divider line and buttons section -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center"
        android:padding="16dp"
        android:layout_marginTop="20dp"
        android:elevation="5dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintBottom_toBottomOf="@id/moreVertActionsLayoutDialog">

        <!-- Skip Button -->
        <Button
            android:id="@+id/skipButton"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_marginEnd="8dp"
            android:text="Skip Tutorial"
            android:backgroundTint="@color/black"
            android:background="@drawable/custom_button"
            android:textColor="@color/black"/>

        <Button
            android:id="@+id/nextButton"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_marginEnd="8dp"
            android:text="NEXT"
            android:background="@drawable/custom_button"
            android:textColor="@color/black"/> <!-- Apply custom border background -->

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>
