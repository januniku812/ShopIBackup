<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <androidx.cardview.widget.CardView
        android:id="@+id/store_item_card_view"
        app:cardCornerRadius="10dp"
        app:cardElevation="5dp"
        app:cardBackgroundColor="@color/black"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginBottom="10dp"
        android:layout_width="match_parent"
        style="@style/user_item_details_text_style"
        android:layout_height="45dp">
        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/store_name_cl"
                android:layout_width="match_parent"
                app:layout_constrainedWidth="true"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toStartOf="@id/select_shopping_mode"
                android:layout_height="match_parent">
            <TextView
                style="@style/user_item_details_text_style"
                android:id="@+id/store_item_name"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                android:fontFamily="sans-serif-condensed-medium"
                android:layout_width="wrap_content"
                android:text="@string/placeholder_store_name"
                android:textSize="14sp"
                android:layout_height="wrap_content"/>
            </androidx.constraintlayout.widget.ConstraintLayout>

            <ImageView
                android:id="@+id/select_shopping_mode"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintEnd_toStartOf="@id/edit_name_button"
                app:layout_constraintBottom_toBottomOf="parent"
                android:layout_width="wrap_content"
                android:src="@drawable/ic_baseline_shopping_cart_24"
                android:layout_height="wrap_content"/>

            <ImageView
                android:id="@+id/edit_name_button"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintEnd_toStartOf="@id/delete_item_button"
                app:layout_constraintBottom_toBottomOf="parent"
                android:layout_width="wrap_content"
                android:src="@drawable/ic_baseline_edit_24"
                android:layout_height="wrap_content"/>

            <ImageView
                android:id="@+id/delete_item_button"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                android:layout_width="wrap_content"

                app:layout_constraintEnd_toEndOf="parent"
                android:src="@drawable/delete_foreground"
                android:layout_height="wrap_content"/>


        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.cardview.widget.CardView>

</LinearLayout>