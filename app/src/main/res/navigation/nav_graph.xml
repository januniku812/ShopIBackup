<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/nav_graph"
    app:startDestination="@id/ActivityMain">

    <activity
        android:id="@+id/ActivityMain"
        android:name="com.example.android.receiptreader.MainActivity"
        android:label="@string/activity_main_label"
        tools:layout="@layout/activity_main">

        <action
            android:id="@+id/action_MainActivity_to_SecondCameraActivity"
            app:destination="@id/SecondCameraActivity" />
    </activity>
    <fragment
        android:id="@+id/SecondCameraActivity"
        android:name="com.example.android.receiptreader.SecondCameraActivity"
        android:label="@string/second_camera_activity"
        tools:layout="@layout/second_fragment_camera">

        <action
            android:id="@+id/action_SecondFragment_to_MainActivity"
            app:destination="@id/ActivityMain" />
    </fragment>
</navigation>